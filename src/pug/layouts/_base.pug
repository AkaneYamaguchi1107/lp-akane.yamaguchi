block variables

doctype html
html(lang='ja')
  head
    if title
      title= `${title} | ${site.appName}`
    else
      title= site.appName
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width ,initial-scale=1')
    if site.manifest
      link(rel='manifest', href='./manifest.manifest')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.1/animate.min.css')
    script(src='https://code.jquery.com/jquery-3.3.1.min.js' defer)
    script(src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js' defer)
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ScrollTrigger/0.3.6/ScrollTrigger.js' defer)
    script(src='./script.js' defer)
    link(rel='stylesheet', href='./style.css')
    block meta
  body
    include /layouts/_header

    block content

    include /layouts/_footer

    if site.jquery
      script(src='https://code.jquery.com/jquery-3.3.1.slim.js')

    script(src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js')

    script.
      document.addEventListener('DOMContentLoaded', function(){ var trigger = new ScrollTrigger();});
    block script
